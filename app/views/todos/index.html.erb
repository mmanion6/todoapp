<h1>Listing all Todos</h1>

<p>
  <%= link_to "Create a Todo", new_todo_path %>
</p>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
  <% @todos.each do |v| %>
    <tr>
      <td><%= v.name %></td>
      <td><%= v.description %></td>
      <td><%= link_to "Edit", edit_todo_path(v) %></td>
      <td><%= link_to "Show", todo_path(v) %></td>
    </tr>
    <% end %>
</table>